<!DOCTYPE html>

<html>
	
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" 			 crossorigin="anonymous">
		<link rel="stylesheet" href="../stylesheets/main.css">
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300&display=swap" rel="stylesheet">
	</head>
	
	
	<body class="comments-body">
		
		
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark homepage-navbar">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="navbar-brand" href="/countries">Program</a>
				</li>
			</ul>
			
			<% if(!currentUser) { %>
				<ul class="navbar-nav ml-auto">
					<li class="nav-item ml-auto">
						<a class="nav-link" href="/login">Login</a>	
					</li>
				
					<li class="nav-item ml-auto">
						<a class="nav-link" href="register">Register</a>
					</li>
				</ul>
			<% } else { %>
			
				<ul class="navbar-nav ml-auto">
					<li class="nav-item homepage-screenNameli">
						Welcome, <em><%= currentUser.screenName %></em>
					</li>
					
					<li class="nav-item">
						<a class="nav-link" href="/logout">Logout</a>
					</li>
					
					<li class="nav-item">
						<a class="nav-link" href="/account">View Account</a>
					</li>
				</ul>
			
			<% } %>
		</nav>
		
		
		
		
		<div class="d-flex justify-content-center">
			<div class="jumbotron comments-jumbotron">
				<h1 class="comments-jumboh1">
					Welcome to the Comments Forum!
				</h1>
				
				<h5 class="comments-jumboh5">
					Post any questions and comments here, or contact us at <em>max.carver@icloud.com</em>
				</h5>
			</div>
		</div>
		
		
			<div class="d-flex justify-content-center">>
					<div class="jumbotron comments-jumbotron2">
						<a href="/comments/new" class="comments-postbnt btn btn-dark float-right">Post Comment</a>

						<hr class="comments-hr">

						<% comments.forEach(function(comment){ %>
							<p class="comments-authorName"><em><%=comment.author.screenName%></em></p>
							<p class="comments-comment"><%=comment.comment %></p>
							
							<% if(currentUser && currentUser._id.equals(comment.author.id)) { %>
							<div class="comments-editDeletediv form-inline">
								<a href="/comments/<%=comment._id%>/edit" class="comments-editbtn btn btn-sm  btn-warning">Edit Comment</a>
								<form action="/comments/<%=comment._id%>?_method=DELETE" method="POST">
									<button class="comments-deletebtn btn btn-sm btn-danger">Delete Comment</button>
								</form>
							</div>
							<% } %>
						<% }) %>
					</div>
			</div>
		
		
		
	</body>
	
	
</html>