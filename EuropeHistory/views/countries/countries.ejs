<!DOCTYPE html>


<html>
	
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" 			 crossorigin="anonymous">
		<link rel="stylesheet" href="../stylesheets/main.css">
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300&display=swap" rel="stylesheet">
	</head>
	
	
	
	<body class="countries-body">
		
		
		
		
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark homepage-navbar">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="navbar-brand" href="/homepage">Home</a>
				</li>
			</ul>
			
			<% if(!currentUser) { %>
				<ul class="navbar-nav ml-auto">
					<li class="nav-item ml-auto">
						<a class="nav-link" href="/login">Login</a>	
					</li>
				
					<li class="nav-item ml-auto">
						<a class="nav-link" href="register">Register</a>
					</li>
				</ul>
			<% } else { %>
			
				<ul class="navbar-nav ml-auto">
					<li class="nav-item homepage-screenNameli">
						Welcome, <em><%= currentUser.screenName %></em>
					</li>
					
					<li class="nav-item">
						<a class="nav-link" href="/logout">Logout</a>
					</li>
					
					<li class="nav-item">
						<a class="nav-link" href="/account">View Account</a>
					</li>
				</ul>
			
			<% } %>
		</nav>
		
		
		
		
		<div class="d-flex justify-content-center">
			<img class="countries-topImg" src="https://i.pinimg.com/originals/87/88/b4/8788b4de609fafbfa8f2b53cfe8876ee.png">	
		</div>
		
		<div class="d-flex justify-content-center">
			<div class="countries-topDiv2">
				<div class="d-flex justify-content-center">
					<h4 class="countries-h4">
						Learn about the history and geography of Europe in thirty-one comprehensive lessons!
					</h4>
				</div>	

				<div class="d-flex justify-content-center">
					<h5 class="countries-topCountryh5">
						Or
					</h5>
				</div>

				<div class="d-flex justify-content-center">
					<a href="/countries/<%=topCountry.routeName%>%>" class="countries-topCountrybtn btn btn-info">Learn about the Country of the Day</a>
				</div>
			</div>
		</div>
		
		
			<% countries.forEach(function(country){ %>
				<div class="card countries-card">	
				  <div class="d-flex justify-content-center">
				     <img class="card-img-top countries-flag img-thumbnail" src="<%=country.flag%>" alt="Card image cap">
				  </div>
					
				  <div class="card-body">
					<div class="d-flex justify-content-center">
						<h5 class="card-title"><%=country.name%></h5>
					</div>
					
					<div class="d-flex justify-content-center countries-countrytext">
						<p class="card-text"><%=country.description%></p>
					</div>
					  
					<div class="d-flex justify-content-center">
						<a href="<%=country.routeName%>" class="btn btn-info countries-showbtn">View Lesson <%=country.lesson%></a>
					</div>
					  
	
					  <% if(currentUser && currentUser.lessonsComplete.length > 1){ %>
						<% currentUser.lessonsComplete.forEach(function(lesson){ %>
							<% if(lesson == country.routeName){ %>
								<% lessonComplete = true %>
								<div class="d-flex justify-content-center">
									<button class="btn btn-success countries-completedbtn">
										Lesson Complete!	
									</button>
								</div>
							<% } %>
						<% }) %>
					  		
					  		<% if(lessonComplete != true) { %>
								<div class="d-flex justify-content-center">
									<button class="btn btn-danger">
										Lesson Incomplete
									</button>
								</div>
							<% } %>
					<% } %>
					  
					  
					  
				  </div>
				</div>
			<% }) %>
		
	</body>
	
	
</html>